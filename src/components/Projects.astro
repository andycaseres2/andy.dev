---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import React from "./icons/React.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import AstroIcon from "./icons/AstroIcon.astro"
import Gatsby from "./icons/Gatsby.astro"
import Redux from "./icons/Redux.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-[#003159] text-white",
    icon: NextJS,
  },
  REACT: {
    name: "React.js",
   class: "bg-[#003159] text-white",
    icon: React,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
    ASTRO: {
    name: "Astro.js",
 class: "bg-[#003159] text-white",
    icon: AstroIcon,
  },
    GATSBY: {
    name: "Gatsby.js",
   class: "bg-[#003159] text-white",
    icon: Gatsby,
  },
    REDUX: {
    name: "Redux.js",
  class: "bg-[#003159] text-white",
    icon: Redux,
  },
}
const PROJECTS = [
  {
    title: "Luca$",
    description:
      "Digital product for the centralization of the origination and management of vehicle loans.",
    link: "https://www.financieconlucas.com/pre-registro/",
    image: "/projects/Lucas.webp",
    github: "",
    tags: [TAGS.ASTRO,  TAGS.REACT , TAGS.TAILWIND],
  },
  {
    title: "Bellpi",
    description:
      "Digital platform in Colombia that offers an innovative way to buy and sell new and pre-owned vehicles online.",
    link: "https://www.bellpi.com/",
    image: "/projects/Bellpi.webp",
    tags: [TAGS.GATSBY ,TAGS.NEXT, TAGS.TAILWIND],
  },
   {
    title: "Datarte",
    description:
      "An online platform that is dedicated to promoting art and facilitating its access through the sale of works of art and the connection between artists and potential buyers.",
    link: "https://www.datarte.art/",
    image: "/projects/Datarte.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.REDUX],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



